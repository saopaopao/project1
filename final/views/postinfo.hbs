<div class="postinfo">
	<form action="/upload" method="post" accept-charset="utf-8" enctype="multipart/form-data">
		<div class="input-group" id="post_title">
			<span class="input-group-addon" id="sizing-addon2">title</span>
			<input type="text" class="form-control" placeholder="请输入该帖子的标题" aria-describedby="sizing-addon2" name="p_title" id="p_title">
			<select class="form-control" name="part">
				<option>寝室生活</option>
				<option>校园美景</option>
				<option>后勤</option>
				<option>教室教学</option>
				<option>学习</option>
				<option>毕业就业</option>
				<option>今日餐食</option>
				<option>校园新闻</option>
			</select>
		</div>
		<textarea class="form-control" rows="15" name="aticle" id="aticle"></textarea>
		<input type="submit" class="btn btn-default" name="postacicle" value="发表" id="postacicle">
		<div class="file">
			<label for="file" id="goon">文件上传:</label>
			<input class="form-inline" type="file" name="file" id="file"/> 
		</div>
		<p id="empty_tip" style="color: red">{{empty_tip}}</p>
	</form>
</div>